<h1><%= @place["name"] %></h1>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">Add New Entry</a>
</p>

<ul>
  <% for entry in @entries %>
    <li>
      <strong><%= entry["title"] %></strong> (<%= entry["posted_on"] %>)<br>
      <%= entry["description"] %>
    </li>
  <% end %>
</ul>

<p>
  <a href="/places">Back to All Places</a>
</p>